extends layout

block content
  h2= folder.name
  p
    a(href=`/document/create?folder=${folder.id}`) New Document
  table.users
    thead
      tr
        th ID
        th Name
        th Content
        th Privacy
    tbody.link-table
      each document in folder.documents
        tr
          td(style="width: 50px")
            a(href="/document/" + document.id)= document.id
          td
            a(href="/document/" + document.id)= document.name
          td
            a(href="/document/" + document.id)
              - let content = document.content.toString()
              if content.length > 100
                = content.substring(0, 100) + ' ...'
              else
                = content
          td(style="width: 100px")
            a(href="/document/" + document.id)= document.privacy
