html
  head
    title Pusheen Suite
    link(href="/favicon.ico" rel="icon" type="image/x-icon")
    link(href="/style.css", rel="stylesheet", type="text/css")
  body
    #main
      include includes/header.pug
      h1 All Tasks
      p.
        A list of all tasks.
      p
        a(href="/task/create") New Task
      table.users
        thead
          tr
            th ID
            th Owner
            th Priority
            th Title
        tbody
          each task in tasks
            tr
              td(style="width: 50px")
                a(href=`/task/${task.id}`)= task.id
              td(style="width: 100px")
                a(href=`/task/${task.id}`)= task.owner.username
              td(style="width: 100px")
                a.task(class=`task-${task.priority}` href=`/task/${task.id}`)= task.priority
              td
                a(href=`/task/${task.id}`)= task.title
